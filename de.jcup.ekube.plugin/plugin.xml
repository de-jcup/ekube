<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.jcup.ekube.commands.category"
            name="EKube">
      </category>
      <command
            categoryId="de.jcup.ekube.commands.category"
            name="Connect"
            id="de.jcup.ekube.commands.connectCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.jcup.ekube.handlers.EKubeReloadKubeConfigurationHandler"
            commandId="de.jcup.ekube.commands.connectCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.jcup.ekube.commands.connectCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
